<wxs src="../../utils/filter.wxs" module="util" />
<view class="container" wx:if="{{true}}">
    <view class="head">
        <image src="{{book.image}}" />
        <text class="title">{{book.title}}</text>
        <text class="author">{{book.author}}</text>
    </view>
    <view class="sub-container">
        <text class="headline">短评</text>
        <text class="shadow" wx:if="{{comments==false}}">还没有短评</text>

        <view class="comment-container">
            <block wx:for="{{util.limit(comments,8)}}" wx:key="">
                <v-tag content="{{item.content}}" tag-class="{{tool.highlight(index)}}">
                    <text slot="after" class="nums">{{"+"+item.nums}}</text>
                </v-tag>
            </block>
        </view>
    </view>
    <view class="sub-container">
        <text class="headline">内容简介</text>
        <text class="content" decode="{{true}}">{{util.format(book.summary)}}</text>
    </view>
    <view class="sub-container">
        <text class="headline">书本信息</text>
        <view class="detail-container">
            <view class="vertical description">
                <text>出版社</text>
                <text>出版年</text>
                <text>页数</text>
                <text>定价</text>
                <text>装帧</text>
            </view>
            <view class="vertical">
                <text>{{book.publisher}}</text>
                <text>{{book.pubdate}}</text>
                <text>{{book.pages}}</text>
                <text>{{book.price}}</text>
                <text>{{book.binding}}</text>
            </view>
        </view>
    </view>
</view>
<view class="post-container" wx:if="{{!posting}}">
    <view class="post-fake" bind:tap="onFakePost">
        <text>输入短评</text>
    </view>
    <view class='like'>
        <v-like like="{{likeStatus}}" count="{{likeCount}}" bind:like="onLike" />
    </view>
</view>
<view class="posting-container" wx:if="{{posting}}">
    <view class="post-header">
        <text wx:if="{{comments}}">仅可点击标签+1</text>
        <text wx:else>暂无标签</text>
        <text class="cancel" bind:tap="onCancel">取消</text>
    </view>
    <view class="comment-container">
        <block wx:for="{{util.limit(comments,3)}}" wx:key="">
            <v-tag content="{{item.content}}" tag-class="{{tool.highlight(index)}}" bind:taping="onPost">
                <text slot="after" class="nums">{{"+"+item.nums}}</text>
            </v-tag>
        </block>
    </view>
    <input class="post" placeholder="短评最多12个字" bind:confirm="onPost"></input>
</view>
<v-mask wx:if="{{posting}}"/>
<wxs module="tool">
    var highlight = function(index) {
        if(index==0){
            return 'ex-tag1'
        }
        if(index==1){
            return 'ex-tag2'
        }

        return ''
    }

    module.exports = {
        highlight:highlight
    }
</wxs>
