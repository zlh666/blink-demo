.container{
    background-color: #f5f5f5;
    width: 100%;
}

.head{
    display:flex;
    flex-direction: column;
    align-items: center;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    background-color:#fff;
}

.head > image{
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.author{
    font-size: 28rpx;
    color:#999;
}

.title{
    color: #2f2f2f;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 600;
}

.sub-container{
    display:flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    margin-top:30rpx;
    padding: 30rpx;
    width: 690rpx;
}

.headline{
    font-size: 30rpx;
    font-weight: 600;
    color:#2f2f2f;
    margin-bottom: 20rpx;
}

.comment-container{
    display:flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.comment-container v-tag{
    margin-right: 15rpx;
    margin-bottom: 10rpx;
}

.nums{
    font-size: 20rpx;
    margin-left: 10rpx;
    color:#999;
}
